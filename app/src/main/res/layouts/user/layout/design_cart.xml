<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/toolbarbg"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10sp"
                >
                <customfonts.MyTextView
                    android:id="@+id/nama_mobil"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nama Mobil"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    />
                <customfonts.MyTextView
                    android:id="@+id/merk_mobil"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Merk Mobil"
                    android:layout_weight="1"
                    android:textAlignment="textEnd"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:layout_margin="10sp"
                android:background="@color/nliveo_orange_colorPrimaryDark"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10sp"
                >
                <customfonts.MyTextView
                    android:id="@+id/tanggal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tanggal"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    />
                <customfonts.MyTextView
                    android:id="@+id/plat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nama Mobil"
                    android:layout_weight="1"
                    android:textAlignment="textEnd"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:layout_margin="10sp"
                android:background="@color/nliveo_orange_colorPrimaryDark"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="right"
                >
                <TextView
                    android:id="@+id/total"
                    android:paddingTop="6sp"
                    android:paddingBottom="6sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/roundorange"
                    android:text="Rp. 100.000,00"
                    android:textAlignment="center"
                    android:layout_gravity="end"
                    android:layout_margin="10sp"
                    android:textColor="@color/white"
                    android:paddingLeft="20sp"
                    android:paddingRight="20sp"
                    />
                <TextView
                    android:id="@+id/cancel"
                    android:padding="6sp"
                    android:layout_width="100sp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/roundorange"
                    android:text="cancel"
                    android:textAlignment="center"
                    android:layout_gravity="end"
                    android:layout_margin="10sp"
                    android:textColor="@color/white"
                    />
            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>